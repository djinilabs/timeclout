{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/auth-config": ["./libs/auth-config/src"],
      "@/graphql": ["./libs/graphql/src"],
      "@/tables": ["./libs/tables/src"],
      "@/utils": ["./libs/utils/src"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["esnext"],
    "jsx": "react-jsx",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["**/*.ts", "**/*.tsx" , "**/*.graphqls"],
  "compileOnSave": true,
  "exclude": ["node_modules", "dist", ".pnpm", "dist"]
}
