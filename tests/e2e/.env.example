# E2E Test Environment Variables
# Copy this file to .env and fill in your actual values

TESTMAIL_NAMESPACE=nsns
TESTMAIL_API_KEY=apikeyhere

# Base URL for the application under test
# Default: http://localhost:3000
BASE_URL=http://localhost:3000

# Test timeout settings (in milliseconds)
# Default: 180000 (3 minutes)
TEST_TIMEOUT=180000

# Action timeout for individual actions (in milliseconds)
# Default: 60000 (1 minute)
ACTION_TIMEOUT=60000

# CI/CD environment flag
# Set to 'true' when running in CI/CD pipeline
CI=false

# Browser configuration
# Options: chromium, firefox, webkit
BROWSER=chromium

# Headless mode for tests
# Set to 'true' to run tests without opening browser windows
HEADLESS=false

# Screenshot and video recording
# Options: on, off, on-first-retry, retain-on-failure, only-on-failure
SCREENSHOT=only-on-failure
VIDEO=retain-on-failure
TRACE=on-first-retry
