type Company {
  createdAt: DateTime!
  createdBy: User!
  name: String!
  pk: ID!
  units: [Unit!]!
  updatedAt: DateTime
  updatedBy: User
}

scalar DateTime

type Mutation {
  createCompany(name: String!): Company!
  createUnit(companyPk: ID!, name: String!): Unit!
  deleteCompany(pk: ID!): Company!
  deleteUnit(pk: ID!): Unit!
  updateCompany(name: String!, pk: ID!): Company!
  updateUnit(name: String!, pk: ID!): Unit!
}

type Query {
  companies: [Company!]!
  company(companyPk: ID!): Company!
}

type Unit {
  createdAt: DateTime!
  createdBy: User!
  name: String!
  pk: ID!
  updatedAt: DateTime
  updatedBy: User
}

type User {
  email: String!
  name: String!
  pk: ID!
}